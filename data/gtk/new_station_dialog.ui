<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="SwNewStationDialog" parent="AdwWindow">
    <property name="width_request">325</property>
    <property name="default_width">425</property>
    <property name="default_height">300</property>
    <property name="title" translatable="yes">New station</property>
    <property name="modal">True</property>
    <child>
      <object class="GtkStack" id="stack">
        <property name="transition-type">over-left-right</property>
        <child>
          <object class="GtkBox" id="selection_page">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkHeaderBar">
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="yes">New station</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="vexpand">True</property>
                <child>
                  <object class="AdwClamp">
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Location</property>
                        <property name="margin_top">12</property>
                        <property name="margin_bottom">18</property>
                        <property name="margin_start">12</property>
                        <property name="margin_end">12</property>
                        <child>
                          <object class="AdwActionRow" id="create_online_row">
                            <property name="title" translatable="yes">_Publish station for everybody (Recommended)</property>
                            <property name="icon-name">folder-publicshare-symbolic</property>
                            <property name="use_underline">True</property>
                            <property name="activatable">True</property>
                            <child type="suffix">
                              <object class="GtkImage">
                                <property name="icon-name">go-next-symbolic</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="create_local_row">
                            <property name="title" translatable="yes">_Keep station private</property>
                            <property name="icon-name">user-home-symbolic</property>
                            <property name="use_underline">True</property>
                            <property name="activatable">True</property>
                            <child type="suffix">
                              <object class="GtkImage">
                                <property name="icon-name">go-next-symbolic</property>
                              </object>
                            </child>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="editor_page">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkHeaderBar">
                <property name="show-title-buttons">false</property>
                <property name="title-widget">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="yes">New private station</property>
                  </object>
                </property>
                <child>
                  <object class="GtkButton" id="back_button">
                    <property name="icon-name">go-previous-symbolic</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton" id="add_button">
                    <property name="label" translatable="yes">Add</property>
                    <property name="sensitive">false</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <property name="vexpand">True</property>
                <child>
                  <object class="AdwClamp">
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Metadata</property>
                        <property name="margin_top">12</property>
                        <property name="margin_bottom">18</property>
                        <property name="margin_start">12</property>
                        <property name="margin_end">12</property>
                        <child>
                          <object class="AdwActionRow">
                            <property name="activatable">True</property>
                            <property name="use_underline">True</property>
                            <property name="title" translatable="yes">Name</property>
                            <property name="activatable-widget">name_entry</property>
                            <property name="focusable">false</property>
                            <child>
                              <object class="GtkEntry" id="name_entry">
                                <property name="valign">center</property>
                                <property name="hexpand">True</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="activatable">True</property>
                            <property name="use_underline">True</property>
                            <property name="title" translatable="yes">Stream URL</property>
                            <property name="activatable-widget">url_entry</property>
                            <property name="focusable">false</property>
                            <child>
                              <object class="GtkEntry" id="url_entry">
                                <property name="valign">center</property>
                                <property name="hexpand">True</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class='GtkShortcutController'>
        <property name='scope'>local</property>
        <child>
          <object class='GtkShortcut'>
            <property name='trigger'>Escape</property>
            <property name='action'>action(dialog.close)</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
